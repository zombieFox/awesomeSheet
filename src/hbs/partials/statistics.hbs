<section id="statistics">
  <div class="row">
    <div class="col-xs-12">
      <h1>Statistics</h1>
    </div>
  </div>
  <div class="stat-block row">
    <div class="col-xs-12">
      <div class="stats str row">
        <div class="col-xs-3 col-sm-3">
          <h2 class="name">Str</h2>
        </div>
        <div class="col-xs-9 col-sm-9 col-lg-6">
          <div class="row no-gutter">
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score text-center" id="input-stat-str" type="number" placeholder="Score" tabindex="1">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier text-center inline-with-input underline-with-input">-1</p>
            </div>
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score-temp text-center" id="input-stat-str-temp" type="number" placeholder="Temp" tabindex="2">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier-temp text-center inline-with-input underline-with-input"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="stats dex row">
        <div class="col-xs-3 col-sm-3">
          <h2 class="name">Dex</h2>
        </div>
        <div class="col-xs-9 col-sm-9 col-lg-6">
          <div class="row no-gutter">
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score text-center" id="input-stat-dex" type="number" placeholder="Score" tabindex="1">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier text-center inline-with-input underline-with-input">3</p>
            </div>
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score-temp text-center" id="input-stat-dex-temp" type="number" placeholder="Temp" tabindex="2">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier-temp text-center inline-with-input underline-with-input"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="stats con row">
        <div class="col-xs-3 col-sm-3">
          <h2 class="name">Con</h2>
        </div>
        <div class="col-xs-9 col-sm-9 col-lg-6">
          <div class="row no-gutter">
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score text-center" id="input-stat-con" type="number" placeholder="Score" tabindex="1">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier text-center inline-with-input underline-with-input">2</p>
            </div>
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score-temp text-center" id="input-stat-con-temp" type="number" placeholder="Temp" tabindex="2">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier-temp text-center inline-with-input underline-with-input"></p>
            </div>
          </div>
        </div>
      </div>
      <div class="stats int row">
        <div class="col-xs-3 col-sm-3">
          <h2 class="name">Int</h2>
        </div>
        <div class="col-xs-9 col-sm-9 col-lg-6">
          <div class="row no-gutter">
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score text-center" id="input-stat-int" type="number" placeholder="Score" tabindex="1">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier text-center inline-with-input underline-with-input">5</p>
            </div>
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score-temp text-center" id="input-stat-int-temp" type="number" placeholder="Temp" tabindex="2">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier-temp text-center inline-with-input underline-with-input">6</p>
            </div>
          </div>
        </div>
      </div>
      <div class="stats wis row">
        <div class="col-xs-3 col-sm-3">
          <h2 class="name">Wis</h2>
        </div>
        <div class="col-xs-9 col-sm-9 col-lg-6">
          <div class="row no-gutter">
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score text-center" id="input-stat-wis" type="number" placeholder="Score" tabindex="1">
              </div>
            </div>
            <div class="col-xs-3">
              <p class="modifier text-center inline-with-input underline-with-input">1</p>
            </div>
            <div class="col-xs-3">
              <div class="input-block" data-input-store="true">
                <input class="input-field score-temp text-center" id="input-stat-wis-temp" type="number" placeholder="Temp" tabindex="2">
