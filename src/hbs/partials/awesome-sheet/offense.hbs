<section id="offense" class="l-section m-clone-block js-section js-clone-block-attack" data-delete-clone-state="false">
  <div class="m-section-heading js-section-heading">
    <div class="container">
      <div class="row">
        <div class="col-xs-2">
          <h1>Offense</h1>
        </div>
        <div class="col-xs-10">
          <div class="m-section-controls">
            <div class="button-group js-clone-controls">
              <button class="js-clone-add-melee button button-small button-tertiary-link" tabindex="3"><span class="icon-add"></span>Melee</button>
              <button class="js-clone-add-ranged button button-small button-tertiary-link" tabindex="3"><span class="icon-add"></span>Ranged</button>
