        <div class="col-xs-12 col-md-3">
          <h2 class="m-section-heading-sub u-inline-with-input u-margin-with-input">Attacks</h2>
        </div>
        <div class="col-xs-12 col-md-9">
          <div class="m-clone-block-target js-clone-block-target js-clone-block-target-attack-melee"></div>
          <div class="m-clone-block-target js-clone-block-target js-clone-block-target-attack-ranged"></div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-lg-9 col-lg-offset-3">
          <div class="m-textarea-block js-textarea-block">
            <label class="m-textarea-block-label js-textarea-block-label" for="offense-attack-notes">Notes</label>
            <div id="offense-attack-notes" class="m-textarea-block-field textarea textarea-large u-full-width js-textarea-block-field" data-path="offense.attack_notes" contentEditable="true" tabindex="3"></div>
