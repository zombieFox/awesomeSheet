<section id="statistics" class="l-section js-section js-section-statistics">
  <div class="m-card">
    <div class="m-card-head">
      <div class="m-card-controls button-group">
        <button class="m-card-title button button-tertiary button-medium button-icon js-card-title" tabindex="1">
          <span class="icon-apps"></span>
          <span class="button-text">Statistics</span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-minimise" tabindex="1">
          <span class="icon-unfold-less js-card-minimise-icon"></span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-toggle" tabindex="1">
          <span class="icon-reader js-card-toggle-icon"></span>
        </button>
      </div>
      <div class="m-card-tabs js-card-tabs">
        <div class="m-tab-group js-tab-group">
          <button class="m-tab-arrow button button-medium button-tertiary button-icon js-tab-arrow" data-tab-arrow-options="tabGroup:statistics,action:left" tabindex="1"><span class="icon-chevron-left"></span></button>
          <div class="m-tab-row js-tab-row">
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:statistics,tab:stats,target:js-tab-panel-stats" tabindex="1"><span class="m-tab-text">Stats</span></button>
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:statistics,tab:abilities,target:js-tab-panel-abilities" tabindex="1"><span class="m-tab-text">Abilities</span></button>
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:statistics,tab:feats,target:js-tab-panel-feats" tabindex="1"><span class="m-tab-text">Feats</span></button>
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:statistics,tab:traits,target:js-tab-panel-traits" tabindex="1"><span class="m-tab-text">Traits</span></button>
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:statistics,tab:languages,target:js-tab-panel-languages" tabindex="1"><span class="m-tab-text">Languages</span></button>
            <button class="m-tab-item js-tab-item" data-tab-options="tabGroup:statistics,tab:power,target:js-tab-panel-power" tabindex="1"><span class="m-tab-text">Powers</span></button>
            <span class="m-tab-indicator"></span>
          </div>
          <button class="m-tab-arrow button button-medium button-tertiary button-icon js-tab-arrow" data-tab-arrow-options="tabGroup:statistics,action:right" tabindex="1"><span class="icon-chevron-right"></span></button>
        </div>
      </div>
    </div>
    <div class="m-card-body">
      <div class="js-edit">
        {{> statistics-edit }}
      </div>
      <div class="js-display is-hidden">
        {{> statistics-display }}
      </div>
    </div>
  </div>
</section>
