<section id="defense" class="l-section js-section js-section-defense" data-display-mode="false">
  <div class="m-card">
    <div class="m-card-head">
      <div class="m-card-head-controls button-group">
        <button class="m-card-title button button-tertiary button-medium button-icon js-card-title" tabindex="1">
          <span class="icon-shield"></span>
          <span class="button-text">Defense</span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-minimise" tabindex="1">
          <span class="icon-unfold-less js-card-minimise-icon"></span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-toggle" tabindex="1">
          <span class="icon-reader-mode js-card-toggle-icon"></span>
        </button>
      </div>
    </div>
    <div class="m-tab-group js-tab-group js-edit-tabs">
      <button class="m-tab-item js-tab-item is-active" data-tab-target="js-tab-panel-hit-points"><span class="m-tab-text">Hit Points</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-armor-class"><span class="m-tab-text">Armor Class</span></button>
      <button class="m-tab-item js-tab-item" data-tab-target="js-tab-panel-saves"><span class="m-tab-text">Saves</span></button>
    </div>
    <div class="m-card-body">
      <div class="js-edit">
        {{> defense-edit }}
      </div>
      <div class="js-display is-hidden">
        {{> defense-display }}
      </div>
    </div>
  </div>
</section>
