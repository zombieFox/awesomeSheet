<section id="equipment" class="l-section js-section js-section-equipment" data-display-mode="false">
  <div class="m-card">
    <div class="m-card-head">
      <div class="m-card-head-controls button-group">
        <button class="m-card-title button button-tertiary button-medium button-icon js-card-title">
          <span class="icon-bottle"></span>
          <span class="button-text">Equipment</span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-minimise">
          <span class="icon-unfold-less js-card-minimise-icon"></span>
        </button>
        <button class="button button-tertiary button-medium button-icon js-card-toggle">
          <span class="icon-reader-mode js-card-toggle-icon"></span>
        </button>
      </div>
    </div>
    <div class="m-card-body">
      <div class="js-edit">
        {{> equipment-edit }}
      </div>
      <div class="js-display is-hidden">
        {{> equipment-display }}
      </div>
    </div>
  </div>
</section>
