<div class="m-clone-block js-clone-block-note">
  <div class="m-edit-controls js-edit-controls" data-pin-watch="js-clone-block-note">
    <div class="button-group button-group-right js-clone-controls">
      <button type="button" class="button button-medium button-secondary button-icon js-clone-add-character-note" tabindex="1"><span class="icon-add"></span><span class="button-text">Character</span></button>
      <button type="button" class="button button-medium button-secondary button-icon js-clone-add-story-note" tabindex="1"><span class="icon-add"></span><span class="button-text">Story</span></button>
      <button type="button" class="button button-medium button-secondary button-icon js-clone-remove" tabindex="1"><span class="icon-close"></span><span class="button-text">Remove</span></button>
    </div>
  </div>

  <div class="m-edit-box m-edit-box-indent m-edit-box-head-small m-edit-box-labels">
    <div class="m-edit-box-head">
      <h2 class="m-edit-box-title">Character</h2>
    </div>
    <div class="m-edit-box-body">
      <div class="m-edit-box-content">
        <div class="m-edit-box-item-max">
          <div class="m-placeholder js-placeholder-clone-note-character">
            <p class="m-placeholder-description u-muted-text">You dont have any Character Notes, add one using <strong class="m-placeholder-key"><span class="icon-add"></span> Character</strong>.</p>
          </div>
        </div>
      </div>
      <div class="m-clone-block-target js-clone-block-target js-clone-block-target-note-character"></div>
    </div>
  </div>

  <hr>

  <div class="m-edit-box m-edit-box-indent m-edit-box-head-small m-edit-box-labels">
    <div class="m-edit-box-head">
      <h2 class="m-edit-box-title">Story</h2>
    </div>
    <div class="m-edit-box-body">
      <div class="m-edit-box-content">
        <div class="m-edit-box-item-max">
          <div class="m-placeholder js-placeholder-clone-note-story">
            <p class="m-placeholder-description u-muted-text">You dont have any Story Notes, add one using <strong class="m-placeholder-key"><span class="icon-add"></span> Story</strong>.</p>
          </div>
        </div>
      </div>
      <div class="m-clone-block-target js-clone-block-target js-clone-block-target-note-story"></div>
    </div>
  </div>

</div>
